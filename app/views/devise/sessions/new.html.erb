<div class="mdl-cell mdl-cell--2-col">
</div>
<div class="mdl-cell mdl-cell--8-col">

  <h2>Log In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :email, :class => "mdl-textfield__label" %><br />
      <%= f.email_field :email, autofocus: true, :class => "mdl-textfield__input"  %>
    </div>
    <br>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :password, :class => "mdl-textfield__label" %><br />
      <%= f.password_field :password, autocomplete: "off", :class => "mdl-textfield__input"  %>
    </div>
    <br>

    <% if devise_mapping.rememberable? -%>
      <div class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect">
        <%= f.check_box :remember_me, :class => "mdl-checkbox__input" %>
        <%= f.label :remember_me, :class => "mdl-checkbox__label" %>
      </div>
    <% end -%>
    <br>

    <div class="actions">
      <%= f.submit "Log In", :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
<div class="mdl-cell mdl-cell--2-col">
</div>
