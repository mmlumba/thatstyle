<div class="mdl-cell mdl-cell--2-col">
</div>
<div class="mdl-cell mdl-cell--8-col">
  <h2 class="center">Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :first_name, :class => "mdl-textfield__label"%><br />
      <%= f.text_field :first_name, autofocus: true, :class => "mdl-textfield__input" %>
    </div>
    <br>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :last_name, :class => "mdl-textfield__label" %><br />
      <%= f.text_field :last_name, autofocus: true, :class => "mdl-textfield__input" %>
    </div>
    <br>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :email, :class => "mdl-textfield__label" %><br />
      <%= f.email_field :email, autofocus: true, :class => "mdl-textfield__input" %>
    </div>
    <br>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :password, :class => "mdl-textfield__label" %>
      <% if @minimum_password_length %>
      <em class="mdl-textfield__error">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", :class => "mdl-textfield__input"  %>
    </div>
    <br>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :password_confirmation, :class => "mdl-textfield__label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "mdl-textfield__input"  %>
    </div>
    <br>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label "Account Type", :class => "mdl-textfield__label" %>
      <%= f.select :type, options_for_select(%w[User Stylist]), {}, {:class => "mdl-menu__item"} %>
    </div>

    <br>
    <div class="actions">
      <%= f.submit "Sign up", :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored"%>
    </div>
  <% end %>

  <!-- <%= render "devise/shared/links" %> -->
</div>
<div class="mdl-cell mdl-cell--2-col">
</div>
